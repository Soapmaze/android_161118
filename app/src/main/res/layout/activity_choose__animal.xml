<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose__animal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.soapmaze.chooseanimal.Choose_Animal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택을 시작하시렵니까?"
        android:id="@+id/txt_title" />

    <CheckBox
        android:text="시작"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkbox_start"
        android:layout_below="@+id/txt_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="좋아하는 동물은?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkbox_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/txt_select" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_select"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/radioGroup">
        <RadioButton
            android:text="개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup2"
            android:layout_toRightOf="@+id/radioGroup2"
            android:layout_toEndOf="@+id/radioGroup2"
            android:id="@+id/radioDog" />

        <RadioButton
            android:text="고양이"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup2"
            android:layout_toRightOf="@+id/radioGroup2"
            android:layout_toEndOf="@+id/radioGroup2"
            android:id="@+id/radioCat" />

        <RadioButton
            android:text="토끼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup2"
            android:layout_toRightOf="@+id/radioGroup2"
            android:layout_toEndOf="@+id/radioGroup2"
            android:id="@+id/radioBunny" />

    </RadioGroup>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/bunny"
        android:id="@+id/imageView"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
